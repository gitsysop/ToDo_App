@page "/"

<PageTitle>To-Do</PageTitle>
<div class="container">
    <h1>To-Do</h1>
    <div class="input">
        <input type="text" @bind="myInput"/>
        <button @onclick="addToDo">Add</button>
    </div>

    @foreach(var todo in todos)
    {
        <div class="item">
            <div class="item-text">@todo</div> 
            <div class="item-close">&times;</div>
        </div>
        
    }
</div>

@code
{
    public string myInput { get; set; }
    public List<string> todos = new List<string>();

    public void addToDo()
    {
        Console.WriteLine(myInput);
        todos.Add(myInput);
        myInput = "";
    }

}


